@model WebApplication2.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/Content/Frontend/Login.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.1/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <title>Login form</title>
</head>
<body>
    <!--loader animation -->
    <video class="loader_bg" image.png muted autoplay loop>
        <source src="/Content/Frontend/Images/Preloading.mp4" type="video/mp4">
    </video>


    <!-- Cursor GSAP -->
    <div class="cursor"></div>

    <!-- Video under Layer-Background -->
    <video data-aos="fade" data-aos-duration="1200" data-aos-easing="ease-in-out" data-aos-delay="4200" autoplay loop muted class="back-video">
        <source src="/Content/Frontend/Images/Galaxy Background-2X-Rife-Rife4.0-60Fps(Webm).webm" type="video/webm" />
    </video>

    <!-- Blur Dark layer-Background-->
    <div class="detail_layer" style="display: block">

        <!-- Box contains: Login & SignUp Form -->
        <div data-aos="zoom-in" data-aos-duration="1200" data-aos-easing="ease-in-out" data-aos-delay="4500" style="position:absolute; top:35%; left:42%;" class="box">
            <!-- Login Form -->
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h2 data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease" data-aos-delay="5300" class="cursor-scale small">SIGN IN</h2>
                <!-- Account Input -->
        <div data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease" data-aos-delay="5600" class="inputBox cursor-scale small">
@*           <input type="text" name="Email" required="required" />
*@            <input id="Email" name="Email" type="text" value="" fdprocessedid="2tpjld" required="required">
            <label for="">Account</label>
            <i></i>
        </div>
                <!-- Password Input -->
        <div data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease" data-aos-delay="5900" class="inputBox cursor-scale small">
            <input id="Password" name="Password" type="password" value="" fdprocessedid="9izdaj" required="required">            
            <label for="" class="cursor-scale small">Password</label>
            <i></i>
        </div>
                <!-- Login Button -->
        <div data-aos="fade-up" data-aos-duration="1200" data-aos-easing="ease" data-aos-delay="6500" class="box-login cursor-scale small">
            <span class="background-login"></span>
            <input type="submit" value="Login" />
        </div>
                <!-- End Login Form -->
                <!--Div Class="box"-->

            }
        </div>
             

        <!-- Rounded Navbar -->
        <div data-aos="fade-down" data-aos-duration="1200" data-aos-easing="ease" data-aos-delay="6600" class="container">
            <nav class="cursor-scale small">
                <div class="nav-wrapper">
                    <div class="toggle-btn">
                        <i class="uil uil-times"></i>
                    </div>
                    <!-- Each href links to each different HTML page-->
                    <span style="--i:1;">   <!-- About page -->

                        <a href="@Url.Action("About", "Home")">
                            <i class="uil uil-chat-bubble-user"></i>
                        </a>
                    </span>
                    <span style="--i:2;">  <!--  Contact Form -->

                        <a href="@Url.Action("Contact", "Home")">
                            <i class="uil uil-question-circle"></i>
                        </a>
                    </span>
                    <span style="--i:3;">  <!-- Music Player -->

                        <a href="@Url.Action("MusicPlayer", "Home")">
                            <i class="uil uil-headphones-alt"></i>
                        </a>
                    </span>
                    <span style="--i:4;">  <!-- Log in -->

                        <a href="@Url.Action("Login", "Home")">
                            <i class="uil uil-signin "></i>
                        </a>
                    </span>
                    <span style="--i:5;">  <!-- Home page-->

                        <a href="@Url.Action("Index", "Home")">
                            <i class="uil uil-house-user"></i>
                        </a>
                    </span>
                </div>
            </nav>
        </div>

        <!--Div Class="Detail_layer"-->
    </div>

    <!-- GSAP curosr script MUST BE PLACED IN THE END OF HTML BODY -->
    <script defer src="/Scripts/Fronend/Login.js"></script>

    <!-- AOS animation library -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
     AOS.init();
    </script>

</body>

</html>


















