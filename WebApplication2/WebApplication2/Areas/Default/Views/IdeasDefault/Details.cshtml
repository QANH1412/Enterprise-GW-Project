    <!--  BODY -->
    <main>
        <div id="slider" data-aos="fade-up" data-aos-duration="1400" data-aos-easing="ease" data-aos-delay="3400">
            <div class="slider-inner">
                <div id="slider-content" data-aos-unset="opacity visibility" data-aos="fade-right" data-aos-duration="500" data-aos-easing="ease" data-aos-delay="3800">
                    <!-- Upper Slider Content  -->
                    <div class="meta cursor-scale small" data-aos="fade-down" data-aos-duration="1200" data-aos-easing="ease" data-aos-delay="2300">Staffs</div>
                    <h2>Detail</h2>
                    <p>
                        <header>
                            <div class="inner">
                                <nav>    <a class="border-underline cursor-scale small" data-aos="fade-down" data-aos-duration="1200" data-aos-easing="ease" data-aos-delay="2600" href="@Url.Action("Index", "IdeasDefault", new {area = "Default", id = ViewBag.Topic.Id, name = ViewBag.Topic.Name, closureDate = ViewBag.Topic.ClosureDate, finalClosureDate = ViewBag.Topic.FinalClosureDate})">Back To List</a> </nav>
                            </div>
                        </header>
                        @*                    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.Topic.Id, name = ViewBag.Topic.Name, closureDate = ViewBag.Topic.ClosureDate, finalClosureDate = ViewBag.Topic.FinalClosureDate })
                        *@
                    </p>
                </div>
                <!--Detail form-->

                <div>
                    <h5 class="MyH5">Idea</h5>
                    <dl class="dl-horizontal">
                        <dt>
                            <h4>View</h4>
                        </dt>

                        <dt>
                            <h4>@ViewBag.ViewCount</h4>
                        </dt>

                        <dt>
                            <h4>Like</h4>
                        </dt>

                        <dd>
                            @{
                                if (@ViewBag.React.React1 < 0)
                                {
                                    <h4> 0 </h4>
                                }
                                else
                                {
                                    <h4>@ViewBag.React.React1</h4>
                                }
                            }
                        </dd>

                        <dt>
                            @using (Html.BeginForm("LikeButton", "IdeasDefault", new { IdeaId = ViewBag.React.IdeaId, TopicId = ViewBag.Topic.Id, Name = ViewBag.Topic.Name, ClosureDate = ViewBag.Topic.ClosureDate, FinalClosureDate = ViewBag.Topic.FinalClosureDate, UserId = ViewBag.React.UserId, reactReact = ViewBag.React.React1 }, FormMethod.Post))
                            {
                                <input type="submit" name="submit" value="Like" style="height:40px; width:70px; margin-top:10px;" />
                            }
                        </dt>




                        <dt>
                            <h4> DisLike </h4>
                        </dt>

                        <dd>
                            @{
                                if (@ViewBag.React.React1 > 0)
                                {
                                    <h4> 0 </h4>
                                }
                                else
                                {
                                    <h4> @ViewBag.ReactDisLike</h4>
                                }
                            }
                        </dd>

                        <dt>
                            @using (Html.BeginForm("DisLikeButton", "IdeasDefault", new { IdeaId = ViewBag.React.IdeaId, TopicId = ViewBag.Topic.Id, Name = ViewBag.Topic.Name, ClosureDate = ViewBag.Topic.ClosureDate, FinalClosureDate = ViewBag.Topic.FinalClosureDate, UserId = ViewBag.React.UserId, reactReact = ViewBag.React.React1 }, FormMethod.Post))
                            {
                                <input type="submit" name="submit" value="DisLike" style="height:40px; width:70px; margin-top:10px;" />
                            }
                        </dt>

                        @using (Html.BeginForm("InputComment", "IdeasDefault", new { IdeaId = ViewBag.React.IdeaId, TopicId = ViewBag.Topic.Id, Name = ViewBag.Topic.Name, ClosureDate = ViewBag.Topic.ClosureDate, FinalClosureDate = ViewBag.Topic.FinalClosureDate, UserId = ViewBag.React.UserId }, FormMethod.Post))
                        {
                            <h4 class="MyH4"> Comment </h4>
                            <input type="text" name="Text" />
                            <button type="submit"> comment</button>
                        }



                    </dl>
                </div>
                <div>
                    <h5 class="MyH5">Idea</h5>
                    <hr />
                    <dl class="dl-horizontal">


                        <dt>
                            <h4>Text</h4>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Text)
                        </dd>

                        <dt>
                            <h4> Filepath</h4>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FilePath)
                        </dd>

                        <dt>
                            <h4> DateTime</h4>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Datetime)
                        </dd>

                        <dt>
                            <h4> Category Name</h4>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>

                        <dt>
                            <h4> User Full name</h4>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.User.Fullname)
                        </dd>

                        <dt>
                            <h4> Topic Name </h4>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Topic.Name)
                        </dd>

                    </dl>
                </div>

                <div>
                <h4 class="MyH5">Comment</h4>
                <hr />
                <dl class="dl-horizontal">

                    <table>
                        <tr>
                            <th> <h4 class="MyH4">Time</h4>  </th>
                            <th><h4 class="MyH4">Comment</h4> </th>
                        </tr>

                        @foreach (var Comment in Comments)
                        {
                            <tr>
                                <td> @Comment.Datetime </td>
                                <td>@Comment.Text</td>
                            </tr>
                        }

                    </table>
                    </dl>
                    </div>









            </div>
        </div>



    </main>





    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r83/three.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/4.1.4/imagesloaded.pkgd.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.4/TweenMax.min.js"></script>
    <script src="/Scripts/Fronend/HomePageDefault.js"></script>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
